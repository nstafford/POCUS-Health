:80

# Dev environment
handle /dev/ws {
    uri strip_prefix /dev
    reverse_proxy http://localhost:8080
}

handle /dev/api/* {
    uri strip_prefix /dev
    reverse_proxy http://localhost:8080
}

handle /dev/* {
    uri strip_prefix /dev
    reverse_proxy http://localhost:8080
}

# Prod WebSocket signaling
handle /ws {
    reverse_proxy backend:8000
}

# Prod API endpoints
handle /api/* {
    reverse_proxy backend:8000
}

# Prod static files
handle {
    root * /srv
    file_server
}
